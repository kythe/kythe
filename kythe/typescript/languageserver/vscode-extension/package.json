{
  "name": "kythe",
  "displayName": "Kythe",
  "description": "A language server implementation for Kythe knowledge graphs",
  "version": "0.0.1",
  "publisher": "Google",
  "engines": {
    "vscode": "^1.13.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension",
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "update-vscode": "node ./node_modules/vscode/bin/install",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "dependencies": {
    "vscode-languageclient": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^6.0.40",
    "mocha": "^8.3.2",
    "typescript": "^2.3.1",
    "vscode": "^0.9.9"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Kythe Language Server configuration",
      "properties": {
        "kytheLanguageServer.bin": {
          "type": "string",
          "default": "kythe_languageserver",
          "description": "Path of the kythe_languageserver executable"
        },
        "kytheLanguageServer.args": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Controls what command line arguments to pass to the server"
        }
      }
    }
  }
}
